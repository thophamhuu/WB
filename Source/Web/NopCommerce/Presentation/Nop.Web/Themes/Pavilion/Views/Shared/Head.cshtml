@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.UI
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;

    var browser = Request.Browser;


    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/1280.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/1000.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/768.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/480.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/mobile-only.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/worldbuy-icon.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.plugin/Content/css/styles.css");


    Html.AppendCssFileParts("~/plugins/worldbuy.simplemenu/Content/css/simplemenu.css");
    Html.AppendCssFileParts("~/plugins/worldbuy.anybanner/Content/css/anybanner.css");


    Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/custom.css");
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/1280.rtl.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/1000.rtl.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/tables.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/1280.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/1000.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/768.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/480.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/tables.css");
    }

    if (supportRtl)
    {

        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/styles.rtl.css");
    }
    else
    {

        Html.AppendCssFileParts("~/Themes/Pavilion/Content/css/styles.css");
    }

    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/footable.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/SevenSpikesExtensions.min.js");

    Html.AddScriptParts("~/Themes/Pavilion/Content/scripts/pavilion.js");
}